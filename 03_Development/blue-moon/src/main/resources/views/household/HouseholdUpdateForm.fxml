<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" prefWidth="500.0" style="-fx-background-color: linear-gradient(to right, #43A5DC, #FF7BAC);" text="Cập nhật thông tin hộ khẩu" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
      </Label>
      
      <VBox spacing="15.0">
         <VBox.margin>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </VBox.margin>
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label fx:id="lblHouseholdId" style="-fx-font-weight: bold;" text="ID: 1" textFill="#2c3e50">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Số nhà:" textFill="#2c3e50">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tfHouseNumber" prefHeight="37.6" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Đường:" textFill="#2c3e50">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tfStreet" prefHeight="37.6" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            
            <HBox spacing="15.0">
               <children>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Phường/Xã:" textFill="#2c3e50">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfWard" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
                  
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Quận/Huyện:" textFill="#2c3e50">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfDistrict" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Ngày đăng ký:" textFill="#2c3e50">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="dpRegistrationDate" prefHeight="37.6" style="-fx-background-radius: 5;">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </DatePicker>
               </children>
            </VBox>
            
            <HBox spacing="15.0">
               <children>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Số nhân khẩu:" textFill="#2c3e50">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblNumberOfResidents" prefHeight="31.2" prefWidth="150.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 8;" text="2 người" textFill="#7f8c8d">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Diện tích (m²):" textFill="#2c3e50">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfAreas" prefHeight="37.6" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="ID chủ hộ:" textFill="#2c3e50">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tfHeadResidentId" disable="true" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
         </children>
      </VBox>
      
      <HBox alignment="CENTER" spacing="20.0">
         <VBox.margin>
            <Insets bottom="20.0" top="10.0" />
         </VBox.margin>
         <children>
            <Button fx:id="btnSave" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: linear-gradient(to right, #43A5DC, #FF7BAC); -fx-cursor: hand;" text="Lưu" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            
            <Button fx:id="btnCancel" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #95a5a6; -fx-cursor: hand;" text="Hủy" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
