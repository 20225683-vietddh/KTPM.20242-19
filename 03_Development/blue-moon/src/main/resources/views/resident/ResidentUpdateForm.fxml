<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="700.0" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" prefWidth="600.0" style="-fx-background-color: linear-gradient(to right, #43A5DC, #FF7BAC); -fx-background-radius: 10 10 0 0;" text="Chỉnh sửa nhân khẩu" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
      </Label>
      
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <VBox spacing="15.0">
               <VBox.margin>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </VBox.margin>
               <children>
                  <!-- Thông tin cơ bản -->
                  <Label text="THÔNG TIN CƠ BẢN" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Họ và tên:" textFill="#2c3e50">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfFullName" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" />
                     </children>
                  </VBox>
                  
                  <HBox spacing="15.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Ngày sinh:" textFill="#2c3e50">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <DatePicker fx:id="dpDateOfBirth" style="-fx-background-radius: 5;" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Giới tính:" textFill="#2c3e50">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="cbGender" style="-fx-background-radius: 5;" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <HBox spacing="15.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Dân tộc:" textFill="#2c3e50">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tfEthnicity" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Tôn giáo:" textFill="#2c3e50">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tfReligion" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Thông tin CCCD -->
                  <Label text="THÔNG TIN CCCD" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Số CCCD:" textFill="#2c3e50">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfCitizenId" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" />
                     </children>
                  </VBox>
                  
                  <HBox spacing="15.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Ngày cấp:" textFill="#2c3e50">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <DatePicker fx:id="dpDateOfIssue" style="-fx-background-radius: 5;" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Nơi cấp:" textFill="#2c3e50">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tfPlaceOfIssue" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Thông tin khác -->
                  <Label text="THÔNG TIN KHÁC" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Nghề nghiệp:" textFill="#2c3e50">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfOccupation" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" />
                     </children>
                  </VBox>
                  
                  <HBox spacing="15.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Quan hệ với chủ hộ:" textFill="#2c3e50">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="cbRelationshipWithHead" style="-fx-background-radius: 5;" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Hộ khẩu:" textFill="#2c3e50">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="cbHousehold" style="-fx-background-radius: 5;" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Ghi chú:" textFill="#2c3e50">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="taNotes" prefRowCount="3" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
      
      <HBox alignment="CENTER" spacing="20.0">
         <VBox.margin>
            <Insets bottom="20.0" top="10.0" />
         </VBox.margin>
         <children>
            <Button fx:id="btnSave" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: linear-gradient(to right, #43A5DC, #FF7BAC); -fx-cursor: hand;" text="Lưu" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            
            <Button fx:id="btnCancel" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #95a5a6; -fx-cursor: hand;" text="Hủy" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox> 